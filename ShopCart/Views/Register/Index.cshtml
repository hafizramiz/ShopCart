
@{
    ViewBag.Title = "Kaydol";
    
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="/Guvenlik/Anasayfa">Anasayfa</a></li>
    </ul>
    <hr class="soft" />
    <div class="well">
        <form class="form-horizontal" method="post" action="/Register/Index">
            <h3>Kisisel Bilgilerinizi Girin</h3>
            <div class="control-group">
                <label class="control-label">Rol Seçin <sup>*</sup></label>
                <div class="controls">
                    <select class="form-select-list" name="kullaniciRolu">
                        <option value="kullanici">Kullanici</option>
                        <option value="satici">Satici</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">KullanicAdi<sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="kullaniciAdi" placeholder="Kullanici Adi">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Soyad<sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="kullaniciSoyadi" placeholder="Kullanici Soyadi">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputEmail">Email <sup>*</sup></label>
                <div class="controls">
                    <input type="text" name="kullaniciMail" placeholder="Email">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Sifre <sup>*</sup></label>
                <div class="controls">
                    <input type="password" name="kullaniciSifre" placeholder="Sifre">
                </div>
            </div>


            <div class="control-group">
                <div class="controls">
                    <input type="submit" name="submitAccount" value="Kaydol" class="exclusive shopBtn">
                </div>
            </div>
        </form>
    </div>

    <!--  Hatayi gosterecek bolum-->

    <div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
