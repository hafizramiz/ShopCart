
@{
    ViewBag.Title = "Satis";
}


<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container">
        <div id="gototop"> </div>
        <!--
        Body Section
        -->
        <div class="row">
            <div class="span12">
                <div class="well well-small">
                    <h1>Satis Sayfasi <small class="pull-right"> </small></h1>
                    <hr class="soften" />

                    <div class="well">
                        <form class="form-horizontal" method="post">
                            <h3>Satis Bilgileri</h3>

                            <div class="control-group">
                                <div class="controls">
                                    <input type="hidden" name="sepetId" value="@Model.sepetId">
                                </div>
                            </div>


                            <div class="control-group">
                                <div class="controls">
                                    <input type="hidden" name="kargoBilgisiId" value="@ViewBag.KargoBilgisi.kargoBilgisiId">
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Odeme Yontemi Secin <sup>*</sup></label>
                                <div class="controls">
                                    <select class="form-select-list" name="odemeYontemiId">
                                        @foreach (ShopCart.Models.OdemeYontemleri o in ViewBag.OdemeYontemleri)
                                        {
                                            <option value="@o.odemeYontemiId">@o.odemeYontemiAdi</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">Ulke Secin <sup>*</sup></label>
                                <div class="controls">
                                    <select class="form-select-list" name="bolgeId">
                                        @foreach (ShopCart.Models.Bolgeler b in ViewBag.Bolgeler)
                                        {
                                            <option value="@b.bolgeId">@b.bolgeTanimi</option>
                                        }
                                    </select>
                                </div>
                            </div>



                            <div class="control-group">
                                <label class="control-label">Satis Tutari <sup>*</sup></label>
                                <div class="controls">
                                    <input type="number" name="satisTutari" value="@ViewBag.ToplamTutar" readonly >
                                </div>
                            </div>


                            <div class="control-group">
                                <div class="controls">
                                    <input type="hidden" name="satisDurumu" value="false",>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <input type="submit" name="submitAccount"
                                           value="Satin Al"
                                           class="exclusive shopBtn">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Placed at the end of the document so the pages load faster -->
        <script src="~/Contents/assets/js/jquery.js"></script>
        <script src="~/Contents/assets/js/bootstrap.min.js"></script>
        <script src="~/Contents/assets/js/jquery.easing-1.3.min.js"></script>
        <script src="~/Contents/assets/js/jquery.scrollTo-1.4.3.1-min.js"></script>
        <script src="~/Contents/assets/js/shop.js"></script>
</body>
</html>




